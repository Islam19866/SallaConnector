 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Integrate Order</title>
</head>
<body>
    @using (Html.BeginForm("IntegrateOrder","Home",FormMethod.Post))
    {


        <div class="form-horizontal">
            <h4>SallaAccount</h4>
            <hr />
            <h1>@ViewBag.errorMessage</h1>
    
            <div class="form-group">
                @Html.Label("Store Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("merchantId", (SelectList)ViewBag.SalesRepId, "Select store...", new { @class = "form-control js-example-basic-single" })

                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Order No", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.Editor("OrderNo",null,new { @class = "form-control required" })
                       
                    </div>
                </div>
            </div>
    
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Integrate" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
</body>
</html>
